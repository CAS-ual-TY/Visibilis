package de.cas_ual_ty.mundusmagicus.magic.calculate;

import de.cas_ual_ty.linguaaspecta.EnumMagicDataType;
import de.cas_ual_ty.linguaaspecta.Input;
import de.cas_ual_ty.linguaaspecta.Node;
import de.cas_ual_ty.linguaaspecta.Output;
import de.cas_ual_ty.mundusmagicus.magic.general.Node2to1;

public class Modulus extends Node2to1
{
	public Modulus(int posX, int posY)
	{
		super(posX, posY);
	}
	
	@Override
	protected boolean canCalculate(float in1, float in2)
	{
		return in2 != 0F;
	}
	
	@Override
	protected float calculate(float in1, float in2)
	{
		return in1 % in2;
	}
}
