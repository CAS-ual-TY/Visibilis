package de.cas_ual_ty.visibilis.function;

import de.cas_ual_ty.visibilis.EnumVDataType;
import de.cas_ual_ty.visibilis.Input;
import de.cas_ual_ty.visibilis.Node;
import de.cas_ual_ty.visibilis.Output;

public class Cosines extends FtoF
{
	public final Input<Float> in1;
	public final Output<Float> out;
	
	public Number value;
	
	public Cosines(int posX, int posY)
	{
		super(posX, posY, 1, 2);
		this.in1 = new Input<Float>(0, this, "float", "float");
		this.out = new Output<Float>(0, this, "float", "float");
	}
	
	@Override
	public boolean doCalculate()
	{
		this.value = Math.cos(this.in1.getValue());
		return true;
	}
	
	@Override
	public <B> B getOutputValue(int index)
	{
		switch(index)
		{
			case 0: return (B) this.value;
		}
		
		return null;
	}
}
