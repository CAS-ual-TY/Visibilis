package de.cas_ual_ty.mundusmagicus.magic.constant;

import de.cas_ual_ty.magic.EnumMagicDataType;
import de.cas_ual_ty.magic.Input;
import de.cas_ual_ty.magic.Node;
import de.cas_ual_ty.magic.Output;

public abstract class Node0to1 extends Node
{
	public final Output<Float> out;
	
	public Node0to1(int posX, int posY)
	{
		super(posX, posY, 1, 2);
		this.out = new Output<Float>(0, this, EnumMagicDataType.FLOAT, "float");
	}
	
	@Override
	public boolean doCalculate()
	{
		return true;
	}
	
	/**
	 * @return The static value.
	 */
	protected abstract float getValue();
	
	@Override
	public <B> B getOutputValue(int index)
	{
		switch(index)
		{
		case 0: return (B) (Float) this.getValue();
		}
		
		return null;
	}
}
